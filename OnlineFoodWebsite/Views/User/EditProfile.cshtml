@model OnlineFoodWebsite.Model.KHACHHANG
@{
    ViewBag.Title = "EditProfile";
}

<div class="w3_login">
    <h3>Cập nhật thông tin</h3>
    <div class="w3_lo gin_module">
        <div class="module form-module">
            @using (Html.BeginForm("EditProfile", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form">
                    
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }



                    @Html.Label("Họ Tên", htmlAttributes: new { })

                    @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENKH, "", new { @class = "text-danger" })




                    @Html.Label("Ngày sinh", htmlAttributes: new { })

                    @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })



                    @Html.Label("SĐT", htmlAttributes: new { })

                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })

                    @Html.Label("Email", htmlAttributes: new { })

                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })

                    @Html.Label("Địa chỉ", htmlAttributes: new { })

                    @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { } })
                    @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })

                    @Html.Label("Giới tính", htmlAttributes: new { })
                    @Html.DropDownListFor(model => model.GIOITINH, ViewBag.ListSex as SelectList, new { htmlAttributes = new { @class = "form-control" } })
                    @*@Html.EditorFor(model => model.GIOITINH, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.GIOITINH, "", new { @class = "text-danger" })
                    <br />
                    <br />
                 

                    @Html.Label("Password", htmlAttributes: new { })

                    @Html.EditorFor(model => model.MATKHAU,new { htmlAttributes = new { @class = "form-control",@Value="" } })
                    @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })

                    <input type="submit" value="Cập nhật" class="btn btn-default" />

                </div>
            }

        </div>


    </div>
</div>


