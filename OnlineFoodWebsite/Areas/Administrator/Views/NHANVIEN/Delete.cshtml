@model OnlineFoodWebsite.Model.NHANVIEN

@{
    ViewBag.Title = "Delete";
}

<h2>Xóa nhân viên</h2>

<h3>Bạn muốn xóa nhân viên này?</h3>
<div>
    <h4>@Model.TENNV</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MANV)
        </dd>
        <br />
        <dt>
            Tên nhân viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENNV)
        </dd>
        <br />
        <dt>
            Ngày sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NGAYSINH)
        </dd>
        <br />
        <dt>
            SĐT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <br />
        <dt>
            Chức vụ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUCVU)
        </dd>
        <br />
        <dt>
            Tài khoản đăng nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TAIKHOAN)
        </dd>
        <br />
        <dt>
            Mật khẩu đăng nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MATKHAU)
        </dd>
        <br />
        <dt>
            Hoạt động gần nhất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LASTACTIVE)
        </dd>
        <br />
        <dt>
            Hình minh họa
        </dt>

        <dd>
            <img src="~/Areas/Administrator/Content/images/@Url.Content(Model.HINHANH)" alt="Image" width="128" height="128" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
