@model IEnumerable<OnlineFoodWebsite.Model.NGUYENLIEU>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách nguyên liệu</h2>


<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên nguyên liệu
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Hình ảnh
        </th>
        <th>Cập nhật lần cuối</th>
        
    </tr>

@{ 
    int i = 0;
    foreach (var item in Model) {
        i++;
    <tr>
        <td>@i</td>
        <td>
            @Html.DisplayFor(modelItem => item.TENNL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MOTA)
        </td>
        <td>
            <img src="~/Areas/Administrator/Content/images/@Url.Content(item.HINHANH)" alt="Image" width="128" height="128" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LASTUPDATE)
        </td>
        <td>
            @Html.ActionLink("Cập nhật", "Create", new { id = item.MANL }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MANL }) @*|
            @Html.ActionLink("Delete", "Delete", new { id = item.MACTN })*@
        </td>
    </tr>
        }
    }
</table>
<p>
    @Html.ActionLink("Thêm nguyên liệu mới", "TaoMoiNL")
</p>